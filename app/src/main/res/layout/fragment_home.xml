<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.HomeFragment">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="Mood progress" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibMood"
        android:src="@drawable/ic_mood_white_24dp"
        android:background="@drawable/mood_button_background"
        android:layout_gravity="bottom|left"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibDistract"
        android:src="@drawable/ic_speaker_white_24dp"
        android:background="@drawable/mood_button_background"
        android:layout_gravity="bottom|right"/>

</FrameLayout>